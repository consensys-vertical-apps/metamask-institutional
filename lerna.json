{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "useNx": true,
  "version": "independent",
  "command": {
    "version": {
      "ignoreChanges": ["*.md"],
      "npmClient": "yarn",
      "message": "chore: updated release notes and package versions"
    },
    "publish": {
      "conventionalCommits": true,
      "npmClient": "yarn",
      "message": "chore: published new version"
    }
  }
}
