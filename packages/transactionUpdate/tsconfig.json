{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "paths": {
    "@metamask-institutional/types": ["../types/src/index.ts"],
    "@metamask-institutional/sdk": ["../sdk/src/index.ts"],
    "@metamask-institutional/mmi-configuration": ["../mmiConfiguration/src/index.ts"],
    "@metamask-institutional/custody-keyring": ["../custodyKeyring/src/index.ts"],
  },
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../sdk"
    },
    {
      "path": "../mmiConfiguration"
    },
    {
      "path": "../custodyKeyring"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
