{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "paths": {
    "@metamask-institutional/types": ["../types/src/index.ts"],
    "@metamask-institutional/simplecache": ["../simpleCache/src/index.ts"]
  },
  "references": [
    {
      "path": "../simpleCache"
    },
    {
      "path": "../types"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
