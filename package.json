{
  "name": "mmi-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for MetaMask Institutional",
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsenSys/mmi-monorepo.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "node ./configure-references.js",
    "test": "lerna run test --stream",
    "publish-all": "lerna publish",
    "lint": "lerna run lint --stream --parallel",
    "build": "lerna run build --stream",
    "compile": "tsc --build && cp \"./package.json\" ./dist/",
    "bootstrap": "lerna bootstrap",
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "exec": "lerna exec"
  },
  "devDependencies": {
    "eslint": "^8.31.0",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "lerna": "^6.1.0",
    "nx": "^15.4.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  }
}
